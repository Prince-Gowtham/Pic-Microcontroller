#include<p16f877a.inc>
ORG 00H

BSF STATUS,RP0	;BANK SELECTION BANK 1
BCF STATUS,RP1

MOVLW 0X00		;ENABLEING PIN INPUT
MOVWF TRISB

BCF STATUS,RP0 	;BANK SELECTION 0
MOVLW 0XFF
MOVWF 0X61
CALL GOWTHAM
GOTO END_1
		GOWTHAM:
			MOVLW 0XFF
			MOVWF 0X21
			MOVWF 0X31
			MOVWF 0X41
			MOVWF 0X51
			GOTO SWITCH
		ON
			MOVWF PORTB
			DECEFZ 0X21,1
			GOTO ON
			GOTO OFF
		ON1
			MOVWF PORTB
			DECEFZ 0X31,1
			GOTO ON1
			GOTO GOWTHAM
		ON2
			MOVWF PORTB
			DECEFZ 0X41,1
			GOTO ON2
		ON3
			MOVWF PORTB
			DECEFZ 0X51,1
			GOTO ON3
			GOTO GOWTHAM
		
		SWITCH
			RLF PORTB
			DECFSZ 0X61,1
			GOTO ON
			RETURN
NOP			
END_1
END

			
			
			
			
			